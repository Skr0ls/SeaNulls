<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/infoLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/default_bg"
    tools:context=".activities.InfoActivity">

    <Button
        android:id="@+id/buttonBackToMainMenuFromInfo"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="355dp"
        android:layout_marginEnd="635dp"
        android:layout_marginBottom="48dp"
        android:text="Назад"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAboutProgram"
        style="@style/text_view"
        android:layout_width="360dp"
        android:layout_height="135dp"
        android:layout_marginTop="32dp"
        android:text="@string/about_program"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewGameRules"
        android:layout_width="360dp"
        android:layout_height="186dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewAboutProgram"
        app:layout_constraintStart_toStartOf="@+id/textViewAboutProgram"
        app:layout_constraintTop_toBottomOf="@+id/textViewAboutProgram">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewGameRules"
                style="@style/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/game_rules" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>